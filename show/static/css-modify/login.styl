@import "./lib/header.styl"
body
    font-size:base-font-size

    .background
        position:absolute
        width:100%
        height:100%
        image-wauto('background1.jpg')
        background-size:cover

    .title
        image-wauto('title1.png')
        width:100%
        position:relative
        height:50%
        top:0.12rem
        z-index:1
    .loginArea
        position:relative
        margin-top:0.2rem
        width:100%
        z-index:1
        .inputArea
            position:relative
            margin:0 auto
            width:70%
            input#login
                width:100%
                background-color:#262727
                border:1px solid #000
                color:#fff
                border-radius:10px
                box-shadow:1px 1px 1px #341c3a
                height:0.12rem
                font-size:bigger-font-size
                text-align:left
                padding:0 0.01rem
                -webkit-user-select:initial
    .buttonArea
        position:relative
        width:100%
        margin-top:0.1rem
        button#submit
            border:none
            image-wauto('submit1.png')
            margin:0 auto
            display:block
            width:0.4rem
            height:0.12rem
            background-color:transparent
